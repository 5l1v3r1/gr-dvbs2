<block>
  <name>Physical Layer Framer</name>
  <key>dvbs2_physical_cc</key>
  <category>dvbs2</category>
  <import>import dvbs2</import>
  <make>dvbs2.physical_cc($constellation.val, $rate.val, $pilots.val)</make>
  <param>
    <name>Constellation</name>
    <key>constellation</key>
    <type>enum</type>
    <option>
      <name>QPSK</name>
      <key>MOD_QPSK</key>
      <opt>val:dvbs2.MOD_QPSK</opt>
    </option>
    <option>
      <name>8PSK</name>
      <key>MOD_8PSK</key>
      <opt>val:dvbs2.MOD_8PSK</opt>
    </option>
    <option>
      <name>16APSK</name>
      <key>MOD_16APSK</key>
      <opt>val:dvbs2.MOD_16APSK</opt>
    </option>
    <option>
      <name>32APSK</name>
      <key>MOD_32APSK</key>
      <opt>val:dvbs2.MOD_32APSK</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate</key>
    <type>enum</type>
    <option>
      <name>1/4</name>
      <key>C1_4</key>
      <opt>val:dvbs2.C1_4</opt>
    </option>
    <option>
      <name>1/3</name>
      <key>C1_3</key>
      <opt>val:dvbs2.C1_3</opt>
    </option>
    <option>
      <name>2/5</name>
      <key>C2_5</key>
      <opt>val:dvbs2.C2_5</opt>
    </option>
    <option>
      <name>1/2</name>
      <key>C1_2</key>
      <opt>val:dvbs2.C1_2</opt>
    </option>
    <option>
      <name>3/5</name>
      <key>C3_5</key>
      <opt>val:dvbs2.C3_5</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbs2.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbs2.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbs2.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbs2.C5_6</opt>
    </option>
    <option>
      <name>8/9</name>
      <key>C8_9</key>
      <opt>val:dvbs2.C8_9</opt>
    </option>
    <option>
      <name>9/10</name>
      <key>C9_10</key>
      <opt>val:dvbs2.C9_10</opt>
    </option>
  </param>
  <param>
    <name>Pilots</name>
    <key>pilots</key>
    <type>enum</type>
    <option>
      <name>Off</name>
      <key>PILOTS_OFF</key>
      <opt>val:dvbs2.PILOTS_OFF</opt>
    </option>
    <option>
      <name>On</name>
      <key>PILOTS_ON</key>
      <opt>val:dvbs2.PILOTS_ON</opt>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
