<block>
  <name>DVB-S2 Modulator</name>
  <key>dvbs2_modulator_bc</key>
  <category>dvbs2</category>
  <import>import dvbs2</import>
  <make>dvbs2.modulator_bc($constellation.val, $rate.val)</make>
  <param>
    <name>Constellation</name>
    <key>constellation</key>
    <type>enum</type>
    <option>
      <name>QPSK</name>
      <key>MOD_QPSK</key>
      <opt>val:dvbs2.MOD_QPSK</opt>
    </option>
    <option>
      <name>8PSK</name>
      <key>MOD_8PSK</key>
      <opt>val:dvbs2.MOD_8PSK</opt>
    </option>
    <option>
      <name>16APSK</name>
      <key>MOD_16APSK</key>
      <opt>val:dvbs2.MOD_16APSK</opt>
    </option>
    <option>
      <name>32APSK</name>
      <key>MOD_32APSK</key>
      <opt>val:dvbs2.MOD_32APSK</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate</key>
    <type>enum</type>
    <option>
      <name>Other</name>
      <key>C_OTHER</key>
      <opt>val:dvbs2.C_OTHER</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbs2.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbs2.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbs2.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbs2.C5_6</opt>
    </option>
    <option>
      <name>8/9</name>
      <key>C8_9</key>
      <opt>val:dvbs2.C8_9</opt>
    </option>
    <option>
      <name>9/10</name>
      <key>C9_10</key>
      <opt>val:dvbs2.C9_10</opt>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
